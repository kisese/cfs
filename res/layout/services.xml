<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal"
    android:background="@drawable/bg_services"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity" >
    
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
            <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        />
        
    </LinearLayout>
    
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="0.94"
        android:background="#00ffffff"
        android:orientation="vertical"
        android:padding="5dp" >
        
        

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Our Services" />

        <Button
            android:id="@+id/btn_svc_trans"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/grey_bg"
            android:text="Transport"
            android:textColor="#dc143c"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn_svc_cnf"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/grey_bg"
            android:text="Clearing and Forwarding"
            android:textColor="#dc143c"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn_svc_warehousing"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/grey_bg"
            android:text="WareHousing"
            android:textColor="#dc143c"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn_scv_ine"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/grey_bg"
            android:text="Imports and Exports"
            android:textColor="#dc143c"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn_svc_gsa"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/grey_bg"
            android:text="RwandAir - General Sales Agent (GSA)"
            android:textColor="#dc143c"
            android:textStyle="bold"
            android:typeface="sans" />

    </LinearLayout>
</ScrollView>
</LinearLayout>