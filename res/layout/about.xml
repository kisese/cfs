<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal"
    android:background="@drawable/bg_about"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity" >
    
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
            <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        />
        
    </LinearLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#00dcdcdc"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_weight="0.94"
        android:background="#00dcdcdc"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="About Us" />

        <Button
            android:id="@+id/btn_about_intro"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:text="Introduction"
             android:background="@drawable/grey_bg"
                android:textColor="#dc143c"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn_about_vmcv"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            
            android:text="Vision, Mission &amp; core Values"
             android:background="@drawable/grey_bg"
                android:textColor="#dc143c"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn_about_wwd"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:text="What we do..."
            android:background="@drawable/grey_bg"
            android:textColor="#dc143c"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn_about_mngmt"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/btn_about_intro"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="10dp"
            
            android:text="Management Staff"
             android:background="@drawable/grey_bg"
                android:textColor="#dc143c"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    </ScrollView>
</LinearLayout>