<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/main_back"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
            <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        />
        
    </LinearLayout>
    


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp" >

            <Button
                android:id="@+id/btn_home"
                android:layout_width="259dp"
                android:layout_height="80dp"
                android:background="@drawable/main_bg"
                android:textColor="#dc143c"
                android:paddingLeft="10dp"
                android:text="Home"
                android:textStyle="bold"
                android:typeface="sans" />

            <Button
                android:id="@+id/btn_about_us"
                android:layout_width="259dp"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/main_bg"
                android:paddingLeft="10dp"
                android:text="About us"
                android:textColor="#dc143c"
                android:textStyle="bold"
                android:typeface="sans" />

            <Button
                android:id="@+id/btn_our_services"
                android:layout_width="259dp"
                android:layout_height="80dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/main_bg"
                android:paddingLeft="10dp"
                android:text="Our Services"
                android:textColor="#dc143c"
                android:textStyle="bold"
                android:typeface="sans" />

            <Button
                android:id="@+id/btn_our_clients"
                android:layout_width="259dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/main_bg"
                android:paddingLeft="10dp"
                android:text="Our Clients"
                android:textColor="#dc143c"
                android:textStyle="bold"
                android:typeface="sans" />
            
                <Button
        android:id="@+id/btn_request_quote"
        android:layout_width="259dp"
        android:layout_height="80dp"
        android:layout_weight="0.01"
        android:layout_marginTop="22dp"
        android:background="@drawable/main_bg"
        android:paddingLeft="10dp"
        android:text="Request for a quote"
        android:textColor="#dc143c"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/btn_customer_care"
        android:layout_width="259dp"
        android:layout_height="80dp"
        android:layout_weight="0.01"
        android:layout_marginTop="22dp"
        android:background="@drawable/main_bg"
        android:paddingLeft="10dp"
        android:text="Customer Care"
        android:textColor="#dc143c"
        android:textStyle="bold"
        android:typeface="sans" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>